package com.difu.view;

import javax.swing.*;


public class DiFu extends JFrame{
	
	JLabel jb1;
	JPanel ja1,ja2;
	JTextField ji1,ji2;
	
	public DiFu(){
		jb1=new JLabel(new ImageIcon("tupian/timg.jpg"));
		//this.add(jb1);
		this.getLayeredPane().add(jb1,new Integer(Integer.MIN_VALUE));
		((JPanel)this.getContentPane()).setOpaque(false); //设置透明
	
		//ja1=new JLabel("摆渡舟");
		//ja2=new JLabel("请输入你来世的姓名");
		
		this.setSize(1300,750);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setLocationRelativeTo(null);
		this.setVisible(true);
	}

	public static void main(String[] args) {
		DiFu difu=new DiFu();
		
	}

}
