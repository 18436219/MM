package com.difu.view;

import java.awt.*;

import javax.swing.*;

public class DiFu extends JFrame{
	   JLabel ja1,ja2,ja4,ja5;
	   JPanel ja3;
	   Font a1;
	   JTextField jb1,jb2;
	   
	public DiFu(){
		//Font是设字体
		a1=new Font("黑体",Font.BOLD,100);
		//添加图片到JLayerPane层
		ja1=new JLabel(new ImageIcon("tupian/timg.jpg"));
		//绝对布局是，布局设为空
		this.getContentPane().setLayout(null);
		//将图片设为窗体大小，覆盖整个界面
		ja1.setBounds(0,0,740,650);
		this.getLayeredPane().add(ja1,new Integer(Integer.MIN_VALUE));
		
		//组件放在ContentPane层
		ja2=new JLabel("往生舟");
		ja2.setFont(a1);
		ja4=new JLabel("请输入你下一世的名字");
		jb1=new JTextField();
		ja5=new JLabel("请输入你下一世的幸运数字（请输入0-9之间的数）");
		jb2=new JTextField();
		this.getContentPane().setLayout(new FlowLayout());
		//内容面板强制转化面板类型，设为不透明
		ja3=(JPanel)this.getContentPane();
		ja3.add(ja2,"North");
		ja3.add(ja4);
		ja3.add(jb1);
		ja3.add(ja5);
		ja3.add(jb2);
		
		
		
		//面板设为透明，其图片层可见
		ja3.setOpaque(false);
		

		this.setSize(740,650);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setLocationRelativeTo(null);
		this.setVisible(true);
	}
	
	public static void main(String[] args) {
		DiFu difu=new DiFu();
	}

}
